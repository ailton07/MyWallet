<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    // Toolbar
    <style name="ToolbarStyleMainScreen" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/title</item>
        <item name="theme">@style/ToolbarButtonThemeLight</item>
    </style>

    // Toolbar Configurações
    <style name="ToolbarStyleSettings" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/title</item>
        <item name="theme">@style/ToolbarButtonThemeLight</item>
    </style>

    // Tema para os botões da Toolbar (Claro)
    <style name="ToolbarButtonThemeLight">
        <item name="colorControlNormal">@color/title</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
