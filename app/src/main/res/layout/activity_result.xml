<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ufam.ceteli.mywallet.activities.ResultActivity">

    <!-- O primeiro frame sempre é a tela principal, aqui vai o conteúdo da tela principal -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/resultFrameMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Toolbar customizada, para ficar como os aplicativos google -->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/abc_action_bar_default_height_material"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"/>

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </ListView>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|bottom" />
        </LinearLayout>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fabNewInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:elevation="16dp"
            app:fab_addButtonColorNormal="#b71c1c"
            app:fab_addButtonColorPressed="#870c0c"
            app:fab_addButtonSize="normal"
            app:fab_labelStyle="@style/menu_labels_style"
            app:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabManualInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_title="Digitar dados de nota"
                app:fab_colorNormal="#757575"
                app:fab_colorPressed="#616161"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPhotoInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_title="Usar imagem de nota"
                app:fab_colorNormal="#757575"
                app:fab_colorPressed="#616161"/>
        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>

    <!-- O segundo frame sempre é o drawer, aqui vai o conteúdo da barra lateral -->
    <include layout="@layout/drawer" />

</android.support.v4.widget.DrawerLayout>
