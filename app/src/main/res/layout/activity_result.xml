<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.ufam.ceteli.mywallet.Activities.ResultActivity">

    <!-- O primeiro frame sempre é a tela principal, aqui vai o conteúdo da tela principal -->
    <FrameLayout
        android:id="@+id/resultFrameMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar customizada, para ficar como os aplicativos google -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize" />

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fabNewInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            app:fab_addButtonSize="normal"
            app:fab_labelStyle="@style/menu_labels_style"
            app:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabManualInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_title="Digitar dados manualmente"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPhotoInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_title="Tirar foto da nota"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

        <!-- Substituto do listview, talvez tenhamos que usar isso mais na frente devido ao FAB -->
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/list">
        </android.support.v7.widget.RecyclerView>

    </FrameLayout>

    <!-- O segundo frame sempre é o drawer, aqui vai o conteúdo da barra lateral -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <android.support.design.widget.NavigationView
            android:id="@+id/resultFrameDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:headerLayout="@layout/activity_result_drawer_header"
            app:menu="@menu/menu_drawer"
            android:layout_above="@+id/resultFrameDefaultOptionsDrawer"
            android:layout_alignParentTop="true">
        </android.support.design.widget.NavigationView>

        <android.support.design.widget.NavigationView
            android:id="@+id/resultFrameDefaultOptionsDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BDBDBD"
            app:menu="@menu/menu_drawer_default"
            android:layout_alignParentBottom="true">
        </android.support.design.widget.NavigationView>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
