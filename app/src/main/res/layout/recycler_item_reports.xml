<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">


        <ImageView
            android:id="@+id/ivType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Medium Text"
            android:layout_toRightOf="@id/ivType"
            android:layout_toLeftOf="@+id/tvMonth"
            android:layout_toStartOf="@+id/tvMonth" />

        <TextView
            android:id="@+id/tvB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:layout_below="@id/tvM"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Medium Text"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ivType"
            android:layout_alignRight="@+id/tvM"
            android:layout_alignEnd="@+id/tvM" />

        <TextView
            android:id="@+id/tvT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Medium Text"
            android:layout_below="@id/tvB"
            android:layout_toRightOf="@id/ivType"
            android:layout_alignRight="@+id/tvB"
            android:layout_alignEnd="@+id/tvB" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Small Text"
            android:layout_alignTop="@+id/tvT"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Small Text"
            android:layout_alignBottom="@+id/tvM"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</LinearLayout>